%header.navbar.navbar-default.navbar-fixed-top
  .navbar-inner
    .container
      = link_to("bgg stats", root_path, id: "logo")
      %nav
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to "Home", root_path
          %li
            = link_to "Help", help_path
          - if signed_in?
            %li= link_to "Users", '#'
            %li#fat-menu.dropdown
              %a{href: "#", class: "dropdown-toggle", "data-toggle" => "dropdown"}
                Account
                %span.caret
              %ul.dropdown-menu{role: "menu"}
                %li{role: "presentation"}= link_to "Profile", current_user, role: "menuitem"
                %li{role: "presentation"}= link_to "Settings", '#', role: "menuitem"
                %li.divider{role: "presentation"}
                %li{role: "presentation"}= link_to "Sign out", signout_path, method: "delete", role: "menuitem"
          - else
            %li= link_to "Sign in", signin_path